######################
# DATABASE CONFIGURATION
######################
# Local Development (XAMPP)
DB_HOST=127.0.0.1
DB_PORT=3307
DB_USER=root
DB_PASS=
DB_NAME=wardrobe_app

# School Server / Shared Hosting
# Uncomment these lines when deploying to school server:
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=tomoh.ikfingeh
# DB_NAME=webtech_2025A_tomoh_ikfingeh
# DB_PASS=STCL@ude20@?

# Note: All tables use 'vw_' prefix to avoid conflicts with existing tables

######################
# APPLICATION SETTINGS
######################
APP_ENV=development
# Options: development, staging, production
APP_DEBUG=true
# Set to false in production
APP_BASE_PATH=/Virtual_Wardrobe
# Base URL path (no trailing slash)
APP_URL=http://localhost:8080
# Full application URL

######################
# SOCKET SERVER (Real-time Features)
######################
SOCKET_API_KEY=dev-secret-key-change-in-production
SOCKET_JWT_SECRET=socket-secret-change-in-production
SOCKET_SERVER_URL=http://localhost:3000
SOCKET_ALLOWED_ORIGINS=http://localhost,http://localhost:8000,http://localhost:8080

######################
# REDIS (Optional)
######################
SOCKET_REDIS_URL=redis://127.0.0.1:6379
SOCKET_REDIS_PASSWORD=redispass

######################
# SESSION & SECURITY
######################
SESSION_LIFETIME=30
# Session timeout in minutes
SESSION_SECURE=false
# Set to true in production (HTTPS only)
RATE_LIMIT_ATTEMPTS=5
# Max login attempts before lockout
RATE_LIMIT_WINDOW=15
# Rate limit window in minutes
PASSWORD_MIN_LENGTH=8
# Minimum password length
REQUIRE_STRONG_PASSWORD=true

######################
# FILE UPLOADS
######################
UPLOAD_MAX_SIZE=5242880
# Max upload size in bytes (5MB)
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_PATH=public/uploads

######################
# EMAIL (Optional - for password reset, notifications)
######################
MAIL_ENABLED=false
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_ADDRESS=noreply@virtualwardrobe.com
MAIL_FROM_NAME="Virtual Wardrobe"
MAIL_ENCRYPTION=tls

######################
# TWO-FACTOR AUTHENTICATION
######################
2FA_ENABLED=false
2FA_ISSUER=VirtualWardrobe

######################
# EXTERNAL APIs (Optional)
######################
WEATHER_API_KEY=
# OpenWeatherMap API key
UNSPLASH_API_KEY=
# Unsplash API key

######################
# MONITORING & LOGGING
######################
GOOGLE_ANALYTICS_ID=
ERROR_REPORTING=E_ALL
LOG_LEVEL=info
# Options: debug, info, warning, error

######################
# TESTING
######################
SKIP_DASHBOARD_UI=false
